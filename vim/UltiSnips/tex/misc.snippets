snippet "rep (\d+) (\w+)" "repeat" r
`!p snip.rv = int(match.group(1))*match.group(2)`
endsnippet

snippet "\\(\w+)((\{.*?\})*)" "command" r
`!p snip.rv = "\\" + match.group(1) + (match.group(2) if match.group(2) != None else "")`{${1:${VISUAL}}}
endsnippet

snippet "(?<=^)%{3,}( (.+))?" "commented box" r
`!p snip.rv = (4+len(t[1]))*'%'`
% ${1:`!p snip.rv = match.group(2) if match.group(2) != None else "text"`} %
`!p snip.rv = (4+len(t[1]))*'%'`
endsnippet
